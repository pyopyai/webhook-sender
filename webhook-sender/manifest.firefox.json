{
  "manifest_version": 2,
  "name": "Webhook Sender",
  "version": "0.1.0",

  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_title": "Webhook Sender"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "icons": {
    "16": "hello_extensions.png",
    "48": "hello_extensions.png",
    "128": "hello_extensions.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "webhook-sender@example.com",
      "strict_min_version": "109.0"
    }
  }
}
